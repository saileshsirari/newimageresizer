        <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@drawable/border"
             android:padding="3dp"

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/image_multiple"
        android:src="@drawable/placeholder"

        android:scaleType="centerCrop"

        android:layout_width="match_parent"
        android:layout_height="220dp" />


        <TextView
            android:gravity="center"
            android:layout_centerHorizontal="true"
             android:layout_below="@+id/image_multiple"
            android:id="@+id/text_name_resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"

            android:layout_centerHorizontal="true"

            android:layout_below="@+id/text_name_resolution"
            android:id="@+id/text_name_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <CheckBox
        android:layout_below="@+id/text_name_size"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



        </RelativeLayout>

